<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".view.MainActivity"
        >
    <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/main_color"
            android:id="@+id/background"
    />
    <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/background"
            android:padding="16dp"
            android:elevation="6dp"
            android:hint="Terjemahkan Indonesia ke Madura"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:id="@+id/input_kata"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/input_kata"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_kata"
                android:text="Indonesia"
                android:id="@+id/translate_from"
                android:textColor="@android:color/white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textAlignment="textEnd"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
        />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_swap_horiz_black_24dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/switch_translate"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/translate_to"
                android:layout_below="@id/input_kata"
                android:text="Madura"
                android:textColor="@android:color/white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
        />
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
              android:text="Terjemahan"
              android:layout_below="@id/background"
              android:layout_marginTop="16dp"
              android:layout_marginLeft="16dp"
              android:textColor="@android:color/black"
              android:id="@+id/sub_title"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sub_title"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/kosakata_layout"
            tools:itemCount="8"
            android:id="@+id/rv_kosakata"
    />


</RelativeLayout>